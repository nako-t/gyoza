---
import "@/styles/global.scss";
import Header from "@/components/header/index.astro";
import "@/layouts/index.scss";
import Gyoza from"@/components/gyoza/index.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/gyoza.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Gyoza</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kaku+Gothic+Antique:wght@400;700&display=swap" rel="stylesheet">
    <script is:inline>
      if (sessionStorage.getItem('gyozaAnimationPlayed')) {
        document.documentElement.classList.add('is-animated');
      }
    </script>
  </head>
  <body>
    <Header />
    <Gyoza />
    <main>
      <slot />
    </main>
  </body>
</html>
